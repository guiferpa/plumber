#!/usr/bin/env sh

# Guide for suport color in sh
# https://stackoverflow.com/questions/5947742/how-to-change-the-output-color-of-echo-in-linux
white=$'\e[0m'
green=$'\e[1;32m'
red=$'\e[1;31m'
cyan=$'\e[0;36m'

gitf=".git"
head="$gitf/HEAD"
heads="$gitf/refs/heads"

cbranchfn () {
  cat $head | awk '{print substr($2, 12, length($2))}'
}

okfn () {
  echo $green"OK"$white
  exit 0
}

failfn () {
  echo $red"FAIL"$white
  exit $1
}

import lib/add.sh
import lib/commit.sh
import lib/branch.sh
import lib/checkout.sh
import lib/init.sh

$1 $@
